{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "OpenKore Config",
    "scopeName": "source.openkore-config",
    "fileTypes": [
        "txt"
    ],
    "patterns": [
        {
            "name": "comment.line.hash.openkore-config",
            "match": "#.*$"
        },
        {
            "name": "meta.block.openkore-config",
            "begin": "^\\s*(attackSkillSlot|attackComboSlot|doCommand|useSelf_skill|useSelf_item|partySkill|monsterSkill|autoSwitch|equipAuto|buyAuto|sellAuto|storageAuto|getAuto|useSelf_skill_smartHeal)\\s*\\{",
            "end": "^\\s*\\}",
            "beginCaptures": {
                "1": {
                    "name": "entity.name.function.openkore-config"
                }
            },
            "patterns": [
                {
                    "include": "#block-content"
                }
            ]
        },
        {
            "name": "meta.key-value.openkore-config",
            "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s+(.+?)\\s*$",
            "captures": {
                "1": {
                    "name": "variable.other.openkore-config"
                },
                "2": {
                    "patterns": [
                        {
                            "include": "#value"
                        }
                    ]
                }
            }
        }
    ],
    "repository": {
        "block-content": {
            "patterns": [
                {
                    "name": "comment.line.hash.openkore-config",
                    "match": "#.*$"
                },
                {
                    "name": "meta.block-property-lvl.openkore-config",
                    "match": "^\\s*(lvl)\\s+([1-9]|10)\\s+(.+?)\\s*$",
                    "captures": {
                        "1": {
                            "name": "keyword.other.openkore-config"
                        },
                        "2": {
                            "name": "constant.numeric.openkore-config"
                        },
                        "3": {
                            "patterns": [
                                {
                                    "include": "#value"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "meta.block-property.openkore-config",
                    "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s+(.+?)\\s*$",
                    "captures": {
                        "1": {
                            "name": "variable.other.openkore-config"
                        },
                        "2": {
                            "patterns": [
                                {
                                    "include": "#value"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        "value": {
            "patterns": [
                {
                    "name": "keyword.other.openkore-config",
                    "match": "\\blvl\\b"
                },
                {
                    "name": "constant.numeric.level.openkore-config",
                    "match": "\\blvl\\s+([1-9]|10)\\b",
                    "captures": {
                        "1": {
                            "name": "constant.numeric.openkore-config"
                        }
                    }
                },
                {
                    "name": "constant.numeric.openkore-config",
                    "match": "\\b([1-9]|10)\\b(?=\\s|$)"
                },
                {
                    "name": "constant.numeric.openkore-config",
                    "match": "\\b(0|[0-9]+)\\b"
                },
                {
                    "name": "constant.language.openkore-config",
                    "match": "\\b(on|off|yes|no|true|false)\\b"
                },
                {
                    "name": "string.quoted.double.openkore-config",
                    "begin": "\"",
                    "end": "\"",
                    "escapes": {
                        "match": "\\\\."
                    }
                }
            ]
        }
    }
}